<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_alignParentTop="true"
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="376px"
        android:background="@drawable/foreground"/>
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="118px"
        android:layout_height="118px"
        android:src="@drawable/hamburger"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="48px"
        android:layout_marginTop="128px"/>
    <TextView
        android:id="@+id/textView1"
        android:layout_width="207px"
        android:layout_height="69px"
        android:textSize="50px"
        android:layout_marginTop="152px"
        android:layout_marginLeft="300px"
        android:layout_marginRight="300px"
        android:layout_toRightOf="@id/imageView2"
        android:textColor="@android:color/white"
        android:fontFamily="@font/poppins_medium"
        android:text="CLIENTS"/>
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="118px"
        android:layout_height="118px"
        android:src="@drawable/logout_icon"
        android:layout_alignParentRight="true"
        android:layout_marginRight="35px"
        android:layout_marginTop="128px"/>
      
	<android.support.v7.widget.CardView
        android:id="@+id/searchView1"
        android:layout_below="@id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="40dp"
        android:layout_marginTop="8px"
        app:cardElevation="3dp"
        app:cardMaxElevation="3.5dp"
        app:cardUseCompatPadding="true"
        android:layout_marginLeft="12px"
        android:layout_marginRight="12px"
        >
        <RelativeLayout            
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="135px"
                android:hint="Search"
                app:MvxBind="Text searchText"
                android:textColor="@color/search_text"
                android:textSize="@dimen/text_size"
                android:gravity="left|center"
                android:fontFamily="@font/poppins_regular"
                android:paddingLeft="50px"
                android:paddingRight="50px"
                android:layout_centerVertical="true"
                android:background="@drawable/rounded_searchlayout"/>
            <LinearLayout
                android:layout_width="152px"
                android:layout_height="135px"
                android:layout_alignParentEnd="true"
                android:background="@drawable/rounded_searchview"
                android:orientation="horizontal"
                app:MvxBind="Click SearchCommand"
                >
            <ImageView
                android:layout_width="78px"
                android:layout_height="78px"
                android:layout_marginLeft="18px"
                android:layout_marginRight="18px"
                android:layout_gravity="center_vertical"
                android:src="@drawable/search_icon"/>
                </LinearLayout>
            </RelativeLayout>
            </android.support.v7.widget.CardView>

	<MvvmCross.DroidX.RecyclerView.MvxRecyclerView
        android:layout_marginLeft="50px"
        android:layout_marginRight="45px"
        android:layout_marginTop="0px"
		android:id="@+id/recyclerView1"
        android:layout_below="@id/searchView1"
        android:layerType="hardware"
		app:MvxBind="ItemsSource ClientList; ItemClick ClickCommand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>
   
