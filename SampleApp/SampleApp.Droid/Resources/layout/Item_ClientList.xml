<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:local="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:local="http://schemas.android.com/apk/res-auto"
        android:id="@+id/imgbtn_onboard"      
        android:layout_width="match_parent"
        android:layout_height="135px"
        app:cardCornerRadius="17.38px"
        android:layout_marginLeft="5px"
        android:layout_marginRight="5px"
        android:layout_marginBottom="5px"
        android:layout_marginTop="30px"
        app:cardElevation="2dp"
        app:strokeWidth="1px"
        app:strokeColor="@color/card_border"
        >
   
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="3.8">

            <TextView
                android:hint="ClientName1"
                android:textSize="@dimen/text_size"
                android:textColor="@color/text_bold"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center"
                android:textAlignment="center"
                local:MvxBind="Text ClientName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"/>
            <TextView
                android:hint="Count"
                android:textSize="@dimen/text_size"
                android:textColor="@color/text_green"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center"
                android:textAlignment="center"
                local:MvxBind="Text ClientNumber"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"/>
            <ImageView
                android:layout_width="77px"
                android:layout_height="77px"
                android:layout_marginTop="29px"
                android:src="@drawable/next"
                android:layout_marginRight="40px"
                android:layout_weight="0.5"/>
        </LinearLayout>
   </com.google.android.material.card.MaterialCardView>
</RelativeLayout>