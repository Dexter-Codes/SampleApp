<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	>
 <android.support.v7.widget.CardView
    android:orientation="vertical"
        android:id="@+id/imgbtn_onboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"       
        app:cardCornerRadius="17px"
        android:layout_marginLeft="5px"
        android:layout_marginRight="5px"
        android:layout_marginBottom="4px"
        app:cardElevation="3dp"
        app:cardMaxElevation="3.5dp"
        app:cardUseCompatPadding="true">
   
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="13dp"
            android:background="@drawable/shadow">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="4dp"
                android:weightSum="2"
                >
				<TextView
					android:text="12952"
					android:id="@+id/text_clientnum"
                    android:textSize="@dimen/text_size"
                    android:textColor="@color/text_bold"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_weight="1"
					android:layout_height="wrap_content"
					android:layout_width="0dp"
                    />

    <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="52px"
            app:cardCornerRadius="35px"
            android:layout_weight="0.42">
            <LinearLayout
        android:id="@+id/linearLayout1"
        android:orientation="horizontal"       
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:MvxBind="BackgroundColor StatusToColor(Status)">
        <TextView
            android:id="@+id/text_status"
            app:MvxBind="Text Status"
            android:textSize="@dimen/text_sizeSmall"
            android:textColor="@android:color/white"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:paddingLeft="8px"
            android:paddingTop="5px"
            android:paddingBottom="5px"
            android:layout_weight="3"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_width="29px"
            android:layout_height="29px"
            android:layout_gravity="center"
            android:layout_marginTop="5px"
            android:layout_marginBottom="5px"
            android:layout_marginRight="5px"
            android:layout_weight="1"
            app:MvxBind="DrawableName StatusIcon"/>
          </LinearLayout>
                </android.support.v7.widget.CardView>
                </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="4dp"
                android:weightSum="1.69">
            <TextView
                    android:text="Client1"
                    android:id="@+id/text_clientname"
                    android:textSize="@dimen/text_size"
                    android:textColor="@color/text_bold"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_weight="0.945"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    />
			<TextView
				android:text="22/12/2020"
				android:id="@+id/text_date"
				android:textSize="@dimen/text_size"
                android:textColor="@color/text_bold"
                android:fontFamily="@font/poppins_regular"
				android:layout_weight="0.645"
				android:layout_height="wrap_content"
				android:layout_width="0dp"
                    />
               <ImageView
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_gravity="end"
                android:paddingBottom="13dp"
                android:layout_weight="0.1"
                android:src="@drawable/next"/>
                </LinearLayout>
        
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="4dp"
                android:weightSum="2">
            <TextView
                    android:text="PropertyID-12"
                    android:id="@+id/text_propid"
                    android:textSize="@dimen/text_sizeMedium"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/text_bold"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    />
                 <TextView
                    android:text="67457"
                    android:id="@+id/text_propnum"
                    android:textSize="@dimen/text_sizeMedium"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/text_bold"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    />
                </LinearLayout>
        </LinearLayout>
</android.support.v7.widget.CardView>
</RelativeLayout>