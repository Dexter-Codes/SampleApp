<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:local="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">  
<RelativeLayout
    android:orientation="vertical"    
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <View
        android:layout_alignParentTop="true"
        android:id="@+id/View1"
        android:layout_width="match_parent"
        android:layout_height="376px"
        android:background="@drawable/foreground"/>
        
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="118px"
        android:layout_height="118px"
        local:MvxBind="Click BackCommand"
        android:src="@drawable/back"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="48px"
        android:layout_marginTop="128px"/>
    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="69px"
        android:textSize="@dimen/text_size"
        android:layout_marginTop="152px"
        android:layout_marginLeft="180px"
        android:layout_toRightOf="@id/imageView2"
        android:textColor="@android:color/white"
        android:fontFamily="@font/poppins_medium"
        android:text="ORDER DETAILS"/>
   
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_below="@id/View1"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="82px"
        android:layout_marginRight="82px"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

              <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="52px"
            local:cardCornerRadius="35px"
            android:layout_weight="0.42"
            android:layout_marginBottom="10px"
            >
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        local:MvxBind="BackgroundColor StatusToColor(Status)">
        <TextView
            android:id="@+id/textView1"
            android:textSize="@dimen/text_sizeSmall"
            android:textColor="@android:color/white"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:paddingLeft="8px"
            android:paddingTop="5px"
            android:paddingBottom="5px"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            local:MvxBind="Text Status"/>
        <ImageView
            android:layout_width="29px"
            android:layout_height="29px"
            android:layout_gravity="center"
            android:layout_marginTop="5px"
            android:layout_marginBottom="5px"
            android:layout_marginRight="5px"
            android:layout_weight="1"
            local:MvxBind="DrawableName StatusIcon"/>
</LinearLayout>
            </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_below="@id/linearLayout1"
        android:layout_marginLeft="82px"
        android:layout_marginRight="82px"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textView2"
            android:textSize="@dimen/text_size"
            android:textColor="@color/text_bold"
            android:fontFamily="@font/poppins_semibold"
            android:text="Order No"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
         <TextView
            android:id="@+id/textView3"
            android:textSize="@dimen/text_size"
            android:textColor="@color/text_bold"
            android:fontFamily="@font/poppins_regular"
            local:MvxBind="Text OrderNum"
            android:text="12345"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
</LinearLayout>
     <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_below="@id/linearLayout2"
        android:layout_marginLeft="82px"
        android:layout_marginRight="82px"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textView4"
            android:textSize="@dimen/text_size"
            android:textColor="@color/text_bold"
            android:fontFamily="@font/poppins_semibold"
            android:text="Client Name"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
         <TextView
            android:id="@+id/textView5"
            android:textSize="@dimen/text_size"
            android:textColor="@color/text_bold"
            android:fontFamily="@font/poppins_regular"
            local:MvxBind="Text ClientName"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
</LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_below="@id/linearLayout3"
        android:layout_marginLeft="82px"
        android:layout_marginRight="82px"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textView6"
            android:text="Property Name"
            android:textSize="@dimen/text_size"
            android:textColor="@color/text_bold"
            android:fontFamily="@font/poppins_semibold"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
         <TextView
            android:id="@+id/textView7"
            android:text="7700"
            android:textSize="@dimen/text_size"
            android:textColor="@color/text_bold"
            android:fontFamily="@font/poppins_regular"
            local:MvxBind="Text PropertyName"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
</LinearLayout>
     <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_below="@id/linearLayout4"
        android:layout_marginLeft="82px"
        android:layout_marginRight="82px"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textView8"
            android:text="Address"
            android:textSize="@dimen/text_size"
            android:textColor="@color/text_bold"
            android:fontFamily="@font/poppins_semibold"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
            <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="vertical"
    >
<android.support.v7.widget.CardView   
    android:id="@+id/imgbtn_onboard"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    local:cardCornerRadius="31px"
        android:layout_marginBottom="5px"
        local:cardElevation="2dp"
        local:cardMaxElevation="3dp"
        local:cardUseCompatPadding="true"
        >
         <EditText
            android:id="@+id/editText9"
            local:MvxBind="Text Address"
            android:textSize="@dimen/edittext_size"
            android:layout_width="match_parent"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:textColor="@color/search_text"
            android:fontFamily="@font/poppins_regular"
            android:background="@drawable/rounded_edittextview"
            android:layout_height="100dp"
            android:gravity="top|left"
                android:lines="20"
                android:inputType="textMultiLine|textNoSuggestions"
                android:scrollbars="vertical"
                android:fadeScrollbars="false"/>
            </android.support.v7.widget.CardView>
            </RelativeLayout>
</LinearLayout>
     <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_below="@id/linearLayout5"
        android:layout_marginLeft="82px"
        android:layout_marginRight="82px"
        android:layout_marginTop="10px"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textView10"
            android:text="Notes"
            android:textSize="@dimen/text_size"
            android:textColor="@color/text_bold"
            android:fontFamily="@font/poppins_semibold"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

         <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="vertical"
    >
<android.support.v7.widget.CardView   
    android:layout_width="match_parent"
    android:layout_height="100dp"
    local:cardCornerRadius="31px"
        android:layout_marginBottom="5px"
        local:cardElevation="2dp"
        local:cardMaxElevation="3dp"
        local:cardUseCompatPadding="true">

         <EditText
            android:id="@+id/editText11"
            local:MvxBind="Text Note"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:gravity="top|left"
            android:background="@drawable/rounded_edittextview"
            android:textColor="@color/search_text"
            android:fontFamily="@font/poppins_regular"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:textSize="@dimen/edittext_size"
                android:lines="20"
                android:inputType="textMultiLine|textNoSuggestions"
                android:scrollbars="vertical"
                android:fadeScrollbars="false"/>
                </android.support.v7.widget.CardView>
            </RelativeLayout>
          
</LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_below="@id/linearLayout6"
        android:layout_marginLeft="82px"
        android:layout_marginRight="82px"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/button1"
            local:MvxBind="Text Btn1"
            android:background="@drawable/roundedbtn_left"
            android:fontFamily="@font/poppins_medium"
            android:textSize="@dimen/text_size"
            android:textColor="@android:color/white"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="132px"/>
        <Button
            android:id="@+id/button2"
            local:MvxBind="Text Btn2"
            android:background="@drawable/roundedbtn_right"
            android:fontFamily="@font/poppins_medium"
            android:textSize="@dimen/text_size"
            android:textColor="@android:color/white"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="132px"/>
        </LinearLayout>
 
        <LinearLayout       
            android:orientation="horizontal"
            android:layout_below="@id/linearLayout7"
            android:id="@+id/linearLayout8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="82px"
            android:layout_marginRight="82px"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30px"
            android:background="@drawable/rounded_buttonview">
            <TextView
                android:text="MARK AS COMPLETE"
                android:textSize="@dimen/text_size"
                android:textColor="@android:color/white"
                android:fontFamily="@font/poppins_medium"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_weight="3"
                android:layout_marginLeft="50px"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <ImageView
                android:id="@+id/imageView3"
                android:layout_marginTop="10px"
                android:layout_marginBottom="10px"
                android:layout_weight="1"
                android:layout_width="118px"
                android:layout_height="118px"
                android:src="@drawable/arrow"/>
       </LinearLayout>
</RelativeLayout>
    </ScrollView>

