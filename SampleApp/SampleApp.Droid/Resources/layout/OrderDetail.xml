<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:local="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"    
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_margin="10dp"
    android:orientation="horizontal"       
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textView1"
            android:layout_gravity="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            local:MvxBind="Text Status"/>
</LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_margin="10dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textView2"
            android:text="Order No"
            android:layout_width="100dp"
            android:layout_gravity="start"
            android:layout_height="match_parent"/>
         <TextView
            android:id="@+id/textView3"
            local:MvxBind="Text OrderNum"
            android:text="12345"
            android:layout_width="100dp"
            android:layout_gravity="center"
            android:layout_height="match_parent"/>
</LinearLayout>
     <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_margin="10dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textView4"
            android:text="Client Name"
            android:layout_width="100dp"
            android:layout_gravity="start"
            android:layout_height="match_parent"/>
         <TextView
            android:id="@+id/textView5"
            local:MvxBind="Text ClientName"
            android:layout_width="100dp"
            android:layout_gravity="center"
            android:layout_height="match_parent"/>
</LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_margin="10dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textView6"
            android:text="Property Name"
            android:layout_width="100dp"
            android:layout_gravity="start"
            android:layout_height="match_parent"/>
         <TextView
            android:id="@+id/textView7"
            android:text="7700"
            local:MvxBind="Text PropertyName"
            android:layout_width="100dp"
            android:layout_gravity="center"
            android:layout_height="match_parent"/>
</LinearLayout>
     <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_margin="10dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textView8"
            android:text="Address"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"/>
         <EditText
            android:id="@+id/editText9"
            local:MvxBind="Text Address"
            android:layout_width="match_parent"
            android:paddingLeft="10dp"
            android:shadowColor="#696969"
            android:background="@drawable/edittext_bg"
            android:layout_height="100dp"
            android:gravity="top|left"
                android:lines="20"
                android:inputType="textMultiLine|textNoSuggestions"
                android:scrollbars="vertical"
                android:fadeScrollbars="false"/>
</LinearLayout>
     <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_margin="10dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textView10"
            android:text="Notes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"/>
       
        >
         <EditText
            android:id="@+id/editText11"
            local:MvxBind="Text Note"
            android:paddingLeft="10dp"
                android:gravity="top|left"
            android:background="@drawable/edittext_bg"
            android:layout_width="match_parent"
            android:layout_height="100dp"
                android:lines="20"
                android:inputType="textMultiLine|textNoSuggestions"
                android:scrollbars="vertical"
                android:fadeScrollbars="false"/>
</LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/button1"
            local:MvxBind="Text Btn1"
            android:background="@drawable/roundedbtn_left"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/button2"
            local:MvxBind="Text Btn2"
            android:background="@drawable/roundedbtn_right"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        </LinearLayout>
</LinearLayout>
